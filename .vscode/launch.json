    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${cwd}"
            },            
            "args":[
                "/2t/data/datasets/h36m",
                "/2t/data/datasets/h36m/h36m",
                "/2t/data/datasets/h36m/bboxes-Human36M-GT.npy"
            ],

        },
        {
            "name": "eval",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--eval",
                "--eval_dataset",
                "val",
                "--config",
                "experiments/human36m/eval/human36m_alg.yaml"
            ]
        },
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config",
                "experiments/human36m/train/human36m_vol_softmax.yaml"
            ]
        }        
    ]
}